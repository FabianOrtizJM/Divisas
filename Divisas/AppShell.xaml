<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Divisas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Divisas"
    Shell.FlyoutBehavior="Disabled"
    Title="Divisas">

    <TabBar Shell.TabBarBackgroundColor="Blue" Shell.TabBarTitleColor="White" Shell.TabBarUnselectedColor="White">
        <Tab Title="Home" Icon="home.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:Home}">
            </ShellContent>
        </Tab>
        <Tab Title="Cafes" Icon="cambio.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:CompraVenta}">
            </ShellContent>
        </Tab>
        <Tab Title="Perfil" Icon="wallet.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:Nuevo}">
            </ShellContent>
        </Tab>
        <Tab Title="Perfil" Icon="perfil.png">
            <ShellContent
                 ContentTemplate="{DataTemplate local:Perfil}">
            </ShellContent>
        </Tab>
    </TabBar>

</Shell>
