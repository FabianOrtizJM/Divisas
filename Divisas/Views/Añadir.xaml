<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divisas.Añadir"
             Title="Añadir">
    <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center" VerticalOptions="Center">

        <Image Source="addcoins.png" WidthRequest="120" HeightRequest="120" HorizontalOptions="Center" />

        <Entry Placeholder="Clave" HorizontalOptions="FillAndExpand" />

        <Entry Placeholder="Precio - venta" HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>

        <Entry Placeholder="Precio - compra" HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>

        <Grid HorizontalOptions="FillAndExpand" ColumnDefinitions="*,Auto">
            <Label Text="Establecer cambio base" VerticalOptions="Center" Grid.Column="0" Padding="0,0,10,0" />
            <Switch HorizontalOptions="End" Grid.Column="1" />
        </Grid>

        <Button Text="Guardar" BackgroundColor="#002D62" TextColor="White" CornerRadius="10" HorizontalOptions="FillAndExpand" />

    </VerticalStackLayout>
</ContentPage>