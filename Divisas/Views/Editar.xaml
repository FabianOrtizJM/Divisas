<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divisas.Views.Editar"
             Title="Editar">
    <ScrollView>
        <StackLayout BackgroundColor="White" Padding="20">
            <Frame BorderColor="White" BackgroundColor="White" Padding="0" WidthRequest="200" HeightRequest="200" Margin="0,10,0,0">
                <Image HeightRequest="200" WidthRequest="200" Source="editcoins.png" Aspect="AspectFit"></Image>
            </Frame>

            <Frame BackgroundColor="White" Padding="0" Margin="0,10,0,0">
                <StackLayout Padding="0">
                    <Entry TextColor="Black" x:Name="Clave" Placeholder="Clave" HorizontalTextAlignment="Center" FontSize="20" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" Padding="0" Margin="0,10,0,0">
                <StackLayout Padding="0">
                    <Entry TextColor="Black" x:Name="PrecioV" Placeholder="Precio - venta" HorizontalTextAlignment="Center" FontSize="20" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" Padding="0" Margin="0,10,0,0">
                <StackLayout Padding="0">
                    <Entry TextColor="Black" x:Name="PrecioC" Placeholder="Precio - compra" HorizontalTextAlignment="Center" FontSize="20" />
                </StackLayout>
            </Frame>

            <!-- BotÃ³n para regresar a Home -->
            <Frame Padding="0" Margin="0,10,0,0">
                <StackLayout Padding="0">
                    <Button Text="Regresar a Home" 
                            Padding="20" 
                            BackgroundColor="#114676"
                            TextColor="White" 
                            FontSize="20" 
                            Clicked="OnRegresarClicked"/>
                </StackLayout>
            </Frame>

            <Frame Padding="0" Margin="0,10,0,0">
                <StackLayout Padding="0">
                    <Button Text="Guardar cambios" Padding="20" BackgroundColor="#114676" TextColor="White" FontSize="20"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
